<Window x:Class="Recaman_Sequence.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recaman_Sequence"
        xmlns:g="clr-namespace:JG_Graphs;assembly=JG_Graphs"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <g:BarGraph Grid.Row="0" Name="barGraph" Margin="10" BorderBrush="Blue" BorderThickness="1"></g:BarGraph>
        <g:ScatterGraph  Grid.Row="1" Name="scatterGraph" Margin="10" BorderBrush="Blue" BorderThickness="1" ></g:ScatterGraph>
        <Button Grid.Row="2" Margin="10" x:Name="BtnStart" Width="80" Click="BtnStart_Click">START</Button>
    </Grid>
</Window>
