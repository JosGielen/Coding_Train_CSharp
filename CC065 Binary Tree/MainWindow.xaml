<Window x:Class="Binary_Tree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binary_Tree"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1200" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" x:Name="canvas1"></Canvas>
        <StackPanel Grid.Row="1" Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label>Add a number to the Tree : </Label>
            <TextBox Width="60" Margin="5" Name="TxtNumber" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">0</TextBox>
            <Button Margin="20,5,5,5" Name="BtnAdd" Click="BtnAdd_Click">Add Number</Button>
        </StackPanel>
    </Grid>
</Window>
