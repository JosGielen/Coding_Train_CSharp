<Window x:Class="Menger_Sponge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menger_Sponge"
        xmlns:JG="clr-namespace:JG_GL;assembly=JG_GL"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800" MouseUp="Window_MouseUp" 
        MouseDown="Window_MouseDown" MouseMove="Window_MouseMove" MouseWheel="Window_MouseWheel" 
        KeyUp="Window_KeyUp" KeyDown="Window_KeyDown" Loaded="Window_Loaded">
    <Grid>
        <JG:GLScene Grid.Row="1" Grid.RowSpan="3" Grid.Column="0" Margin="5" x:Name="myScene" ></JG:GLScene>
    </Grid>
</Window>
