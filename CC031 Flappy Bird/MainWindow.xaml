<Window x:Class="Flappy_Bird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flappy_Bird"
        mc:Ignorable="d"
        Title="Flappy Bird" Height="600" Width="1000" Loaded="Window_Loaded" Closing="Window_Closing" PreviewKeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Name="Canvas1" Background="Yellow" ></Canvas>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1.0">
            <Button  Width="80" Height="25" Margin="10" FontWeight="Bold" Name="BtnStart" Click="BtnStart_Click">START</Button>
        </Border>
    </Grid>
</Window>
