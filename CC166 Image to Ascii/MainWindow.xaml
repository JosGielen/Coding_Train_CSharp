<Window x:Class="ASCII_Art.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Floyd_Steinberg"
        mc:Ignorable="d"
        Title="MainWindow" Loaded="Window_Loaded" SizeToContent="WidthAndHeight"  >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Margin="10" BorderBrush="Blue" BorderThickness="2">
            <Canvas Width="600" Height="800" Background="Black" x:Name="Canvas1">
                <Image x:Name="Original" ></Image>
            </Canvas>
        </Border>
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtnStart" Margin="5,5,5,5" Width="60" FontSize="14" FontWeight="Bold" Click="BtnStart_Click">START</Button>
        </StackPanel>
    </Grid>
</Window>
