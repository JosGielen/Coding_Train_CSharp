<Window x:Class="SuperEllipse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperEllipse"
        mc:Ignorable="d"
        Title="MainWindow" Height="560" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Name="canvas1" Background="black"></Canvas>
        <StackPanel Grid.Row="1" Orientation="Horizontal" >
            <Label Margin="20,10,0,10">N:</Label>
            <Slider Margin="3,10,10,10" Name="SldN" Width="120" Minimum="0" Maximum="10" Value="2" TickFrequency="0.01" ValueChanged="SldN_ValueChanged" SmallChange="0.01" LargeChange="0.1" IsSnapToTickEnabled="True"/>
            <TextBox Width="50" VerticalContentAlignment="Center" Name="TxtN">2.0</TextBox>
            <Button Margin="60,10,10,10" Width="80" FontSize="14" FontWeight="Bold" Name="BtnStart" Click="BtnStart_Click">START</Button>
        </StackPanel>
    </Grid>
</Window>
