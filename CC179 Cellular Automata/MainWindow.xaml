<Window x:Class="Cellular_Automata.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cellular_Automata"
        mc:Ignorable="d"
        Title="MainWindow" Height="373" Width="600" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Margin="3" BorderBrush="Black" BorderThickness="2">
            <Canvas Grid.Row="0" x:Name="canvas1">
                <Image x:Name="image1"></Image>
            </Canvas>
        </Border>
        <StackPanel Grid.Row="1" Margin="5" Orientation="Horizontal">
            <Label VerticalAlignment="Center" Margin="30,3,3,3">Code:</Label>
            <TextBox x:Name="TxtCode" VerticalContentAlignment="Center" Margin="3" Width="50" FontSize="14" FontWeight="Bold">001</TextBox>
            <Button x:Name="BtnStart" Width="80" Margin="140,3,3,3" Click="BtnStart_Click">START</Button>
        </StackPanel>
    </Grid>
</Window>
